//- index.jade
extends ../layout
block content
  div(class="col-lg-8 questions")
        h3!= "Question List"
        each question in questions
          div(class="panel panel-default")
            div(class="panel-body")
              div(class="col-lg-4 counts")
               div(class="vote col-lg-1 accent-color")!= question.vote
               div(class="answer col-lg-1 accent-color")!= question.answer_count
               div(class="view col-lg-1 accent-color")!= question.view
              div(class="col-lg-8")
                h4(class="heading") 
                  a(href='/question/'+question._id)!= question.title
                span(class="user right") &nbsp;asked by &nbsp;
                  a(href="#")!= question.user
                span(class="time right")
                  a(href="#")!= question.date+" "
            
          